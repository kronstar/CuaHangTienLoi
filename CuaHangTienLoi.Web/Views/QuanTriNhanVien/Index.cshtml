
@{
    ViewBag.Title = "Quản trị nhân viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="title-main">
    @using (Html.BeginForm("CreateNhanVien", "QuanTriNhanVien", FormMethod.Post))
    {
        <input class="btn btn-primary m-3" type="submit" value="Thêm" name="add" />
    }
</div>
@if (Model != null)
{
    int i = 1;
    <table id="Mytable" class="tablesorter table">
        <thead>
            <tr>
                <th style="width:40px;">STT</th>
                <th>Tên nhân viên</th>
                <th>Chức vụ</th>
                <th>Số điện thoại</th>
                <th>Địa chỉ</th>
                <th>Ngày sinh</th>
                <th>Giới tính</th>
                <th>Ngày tham gia</th>
                <th>Lương</th>
                <th style="width:135px">Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var text = "";
            <tr>
                <td style="text-align: center">@i</td>
                <td style="width:200px;">@item.HoTen</td>
                <td>
                    <option value="@item.ChucVu.MaChucVu">@item.ChucVu.TenChucVu</option>
                </td>
                <td>@item.SoDienThoai</td>
                <td>@item.DiaChi</td>
                <td>@item.NgaySinh.ToString("dd-MM-yyyy")</td>
                <td>
                    @if (@item.GioiTinh == false)
                    {
                        <p>Nam</p>
                    }
                    else
                    {

                        <p>Nữ</p>
                    }
                </td>
                <td>@item.NgayThamGia.ToString("dd-MM-yyyy")</td>
                <td>@item.Luong.ToString("N0") VNĐ</td>
                <td style="text-align: center">
                    <div class="dropdown">
                        <button class="btn" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-ellipsis-h text-black-50"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                            <a href="/QuanTriNhanVien/EditNhanVien?t=@item.MaNhanVien" class="dropdown-item d-flex">Chỉnh sửa</a>
                            <a href="/QuanTriNhanVien/DeleteNhanVien?t=@item.MaNhanVien" class="dropdown-item d-flex">Xoá</a>
                        </div>
                    </div>
                </td>
            </tr>
                i++;
            }


        </tbody>
    </table>
}
