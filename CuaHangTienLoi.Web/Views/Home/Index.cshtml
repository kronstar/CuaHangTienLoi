@using System.Web.UI.WebControls
@{
    ViewBag.Title = "Cửa hàng tiện lợi";
}

<!-- Slider start -->
<div id="carouselExampleControls"
     class="carousel slide"
     data-ride="carousel">
    <div class="carousel-inner" style="height: auto">
        <div class="carousel-item active">
            <img src="~/Content/img/banner/gs25mayhome-banner-image3200x1200.jpg"
                 class="d-block w-100"
                 alt="..." />
        </div>
        <div class="carousel-item">
            <img src="~/Content/img/banner/miyouus-2.png"
                 class="d-block w-100"
                 alt="..." />
        </div>
        <div class="carousel-item">
            <img src="~/Content/img/banner/premium-1.png"
                 class="d-block w-100"
                 alt="..." />
        </div>
    </div>
    <button class="carousel-control-prev"
            type="button"
            data-target="#carouselExampleControls"
            data-slide="prev">
        <span class="carousel-control-prev-icon"
              aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </button>
    <button class="carousel-control-next"
            type="button"
            data-target="#carouselExampleControls"
            data-slide="next">
        <span class="carousel-control-next-icon"
              aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </button>
</div>
<!-- Slider end -->

<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row justify-content-center">

            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <div class="col-md-8 col-lg-6 col-xl-4">
                        <div class="card" style="border-radius: 15px;">
                            <div class="bg-image hover-overlay ripple ripple-surface ripple-surface-light"
                                 data-mdb-ripple-color="light">
                                <img src="~/Content/img/product/@item.LinkAnh"
                                     style="max-height: 300px; max-width: 300px;"
                                     alt="" />
                            </div>
                            <div class="card-body pb-0">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <p><a href="/Chitietsanpham/index?sp=@item.MaSanPham" class="text-dark">@item.TenSanPham</a></p>
                                        <p class="small text-muted">@item.DonGia.ToString("N0") VNĐ</p>
                                    </div>
                                    <div>
                                        <div class="d-flex flex-row justify-content-end mt-1 mb-4 text-danger">
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                        </div>
                                        <p class="small text-muted">@item.LuotMua Đã bán</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>


