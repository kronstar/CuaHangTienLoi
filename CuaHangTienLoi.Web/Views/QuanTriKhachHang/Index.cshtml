
@{
    ViewBag.Title = "Quản lý khách hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <div class="title-main">
        @using (Html.BeginForm("CreateKhachHang", "ManagerKhachHang", FormMethod.Post))
        {
            <input class="btn btn-primary m-3" type="submit" value="Thêm" name="add" />
        }
    </div>
    <div class="main-ct">


        <div class="table-wp">
            @if (Model != null)
            {
                int i = 1;
                <table id="Mytable" class="tablesorter table">
                    <thead>
                        <tr>
                            <th style="width:40px;">STT</th>
                            <th>Tên Khách Hàng</th>
                            @*<th>Ngày Sinh</th>*@
                            @*<th>giới Tính</th>*@
                            <th>Địa Chỉ</th>
                            <th>Điện Thoại</th>
                            <th>Email</th>
                            @*<th>Tên Đăng Nhập</th>
                                <th>Mật khẩu</th>*@
                            @*<th>Phân Quyền</th>*@
                            @*<th>Xóa Tạm</th>*@
                            <th style="width:135px">Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="text-align: center">@i</td>
                                <td>@item.HoTen</td>
                                @*<td>@item.NgaySinh</td>*@
                                @*<td>@item.GioiTinh</td>*@
                                <td>@item.DiaChi</td>
                                <td>@item.SoDienThoai</td>
                                <td>@item.Email</td>
                                @*<td>@item.TenDangNhap</td>
                                    <td>@item.MatKhau</td>*@
                                @*<td>@item.PhanQuyen</td>*@
                                @*<td>@item.Deleted</td>*@
                                <td style="text-align: center">
                                    <div class="dropdown">
                                        <button class="btn" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fa fa-ellipsis-h text-black-50"></i>
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                            <a href="/ManagerSanPham/EditSanPham?t=@item.MaTaiKhoan" class="dropdown-item d-flex">Chỉnh sửa</a>
                                            <a href="/ManagerSanPham/DeleteSanPham?t=@item.MaTaiKhoan" class="dropdown-item d-flex">Xoá</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            i++;
                        }


                    </tbody>
                </table>
            }

            <script type="text/javascript">
                $(document).ready(function () {
                    $('#Mytable').dataTable({
                        "lengthMenu": [[15, 25, 50, -1], [15, 25, 50, "All"]]
                    });
                });
            </script>
        </div>
    </div>
    <div class="clear"></div>
</div>