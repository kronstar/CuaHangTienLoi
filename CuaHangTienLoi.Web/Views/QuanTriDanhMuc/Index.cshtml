
@{
    ViewBag.Title = "Quản lý danh mục";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="title-main">
    @using (Html.BeginForm("CreateDanhMuc", "QuanTriDanhMuc", FormMethod.Post))
    {
        <input class="btn btn-primary m-3" type="submit" value="Thêm" name="add" />
    }
</div>
@if (Model != null)
{
    int i = 1;
    <table id="Mytable" class="tablesorter table">
        <thead>
            <tr>
                <th style="width:40px;">STT</th>
                <th>Tên Chủ Đề</th>
                <th>Trạng Thái</th>
                <th style="width:135px">Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var mn in Model)
            {
                var text = "";
                <tr>
                    <td style="text-align: center">@i</td>
                    <td>@mn.TenDanhMuc</td>
                    <td>

                        @if (mn.TrangThai)
                        {
                            text = "Hiện";
                        }
                        else
                        {
                            text = "Ẩn";
                        }
                        @text
                    </td>
                    <td style="text-align: center">
                        <div class="dropdown">
                            <button class="btn" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-ellipsis-h text-black-50"></i>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                <a href="/QuanTriDanhMuc/EditDanhMuc?t=@mn.MaDanhMuc" class="dropdown-item d-flex">Chỉnh sửa</a>
                                <a href="/QuanTriDanhMuc/DeleteDanhMuc?t=@mn.MaDanhMuc" class="dropdown-item d-flex">Xoá</a>
                            </div>
                        </div>
                    </td>
                </tr>
                i++;
            }
    </tbody>
</table>
}
